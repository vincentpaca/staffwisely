%fieldset
  %label Full Name
  = f.text_field :full_name

%fieldset
  = f.label "Country"
  = f.select :location, option_groups_from_collection_for_select(@continents, :countries, :name, :id, :name, @employee.location), :include_blank => "Please select a country..."

%fieldset
  = f.label "City"
  = f.text_field :city

%fieldset
  = f.label :position
  = f.text_field :position

%fieldset
  %label Skill Level
  = f.select :skill_level, %w[Junior Mid Expert]

%fieldset
  = f.label :category
  = f.select :category, option_groups_from_collection_for_select(@categories, :sub_categories, :name, :id, :name, @employee.category), :include_blank => "Please select a category..."

%fieldset
  %label Employee For
  = f.select :tenure, ["< 1", "1", "2", "3", "4", "5", "> 5"]
  Year(s)

%fieldset
  %label Total Work Experience
  = f.select :experience, ["< 1", "1", "2", "3", "4", "5", "> 5"]
  Year(s)

%fieldset
  = f.label :rate
  = f.text_field :rate, :class => "short-2"
  %span.inline-tip USD

%fieldset
  = f.label :skills
  = f.text_field :skill_list, { :value => "#{ @employee.skills.nil? ? '' : @employee.skill_list }" }

%fieldset.separate
  = f.label :picture
  = f.file_field :picture

%fieldset
  = f.submit "Save Staff", { :class => "main-cta" }
