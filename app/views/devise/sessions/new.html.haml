.login-wrapper
  .login-header User Login


  = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
    
    .login-body  
      %fieldset
        = f.label :email
        = f.text_field :email
    
      %fieldset
        = f.label :password
        = f.password_field :password
  
    .login-footer
      %span.inline-link
        = link_to "Forgot your password?", "/users/password/new"

      = f.submit "Login"
